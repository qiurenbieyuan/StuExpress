<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--子菜单图标-->
    <style name="MyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">"文本"</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="MyText.RightOfPb">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="MyText.LeftOfPb">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center|right</item>
    </style>

    <style name="MyText.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyText.Large.Black">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="MyText.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LabelText" parent="MyText.Small">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:text">标签</item>
        <item name="android:background">@drawable/label_bg</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyImg">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:src">@drawable/img_holder</item>
    </style>

    <style name="MyProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:progress">35</item>
    </style>

    <style name="MyPbItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Menu_Icon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Icon_50dp">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Menu_Icon.Small">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="MenuText" parent="MyText">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="Menu_Icon.Left">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="Menu_Icon.Center">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Menu_Icon.Right">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ArrowRight" parent="Menu_Icon.Right">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:src">@drawable/arrowright</item>
    </style>

    <style name="SplitLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="SplitLine.WithMargin">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="Wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MenuWrapper" parent="Wrapper">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:padding">@dimen/menuMargin</item>
    </style>

    <style name="MenuGroupWrapper" parent="Wrapper">
        <item name="android:layout_marginTop">@dimen/menuMargin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MySpinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <!--<item name="android:shadowColor">@color/light_gray</item>-->
    </style>

    <dimen name="menuMargin">12dp</dimen>

    <style name="TabIndicator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
